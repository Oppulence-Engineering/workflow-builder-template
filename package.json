{
  "name": "ai-workflow-builder-template",
  "version": "1.1.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "A template for building your own AI-driven workflow automation platform",
  "scripts": {
    "dev": "pnpm discover-plugins && next dev",
    "build": "pnpm discover-plugins && next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "watt:import": "npx wattpm-utils import",
    "watt:dev": "wattpm dev",
    "watt:build": "wattpm build",
    "watt:start": "wattpm start",
    "helm:template": "helm template k8s/charts/workflow-builder",
    "helm:install": "helm install workflow-builder k8s/charts/workflow-builder",
    "helm:upgrade": "helm upgrade workflow-builder k8s/charts/workflow-builder",
    "helm:uninstall": "helm uninstall workflow-builder",
    "discover-plugins": "tsx scripts/discover-plugins.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.74",
    "@ai-sdk/provider": "^2.0.0",
    "@aws-sdk/client-lambda": "^3.940.0",
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/client-sts": "^3.940.0",
    "@azure/storage-blob": "^12.29.1",
    "@google-cloud/storage": "^7.17.3",
    "@linear/sdk": "^63.2.0",
    "@mendable/firecrawl-js": "^4.6.2",
    "@monaco-editor/react": "^4.7.0",
    "@playbookmedia/backend-client-sdk": "1.26.2-patch-3",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@slack/web-api": "^7.12.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/sdk": "^1.17.1",
    "@vercel/speed-insights": "^1.2.0",
    "@xyflow/react": "^12.9.2",
    "ai": "^5.0.102",
    "better-auth": "^1.3.34",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "jotai": "^2.15.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "mongodb": "^7.0.0",
    "motion": "^12.23.24",
    "nanoid": "^5.1.6",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "openai": "^6.8.1",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-resizable-panels": "^3.0.6",
    "resend": "^6.4.1",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "v0-sdk": "^0.15.1",
    "vaul": "^1.1.2",
    "workflow": "4.0.1-beta.17",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm fix",
      "pnpm type-check"
    ],
    "*.{js,jsx,json,css,md}": [
      "pnpm fix"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.6",
    "husky": "^9.1.7",
    "knip": "^5.70.1",
    "lint-staged": "^16.2.7",
    "semantic-release": "^25.0.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "ultracite": "6.3.0"
  }
}
