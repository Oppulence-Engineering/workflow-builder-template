# =============================================================================
# Workflow Builder - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# For Docker Compose, these values are also used in docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# For Docker: postgresql://workflow:workflow@postgres:5432/workflow_builder
# For local: postgresql://user:password@localhost:5432/workflow_builder
DATABASE_URL=postgresql://workflow:workflow@postgres:5432/workflow_builder

# Individual database credentials (used by Docker Compose)
POSTGRES_USER=workflow
POSTGRES_PASSWORD=workflow
POSTGRES_DB=workflow_builder

# -----------------------------------------------------------------------------
# Better Auth Configuration
# -----------------------------------------------------------------------------
# Secret key for signing tokens (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Base URL for authentication callbacks
# For Docker: http://localhost:3000
# For production: https://your-domain.com
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Platformatic Watt Configuration
# -----------------------------------------------------------------------------
# Application port
PORT=3000

# Number of worker threads for SSR (adjust based on available CPU cores)
# Development: 1
# Production: 2-4 (depending on resources)
PLT_NEXT_WORKERS=1

# Valkey/Redis connection for distributed caching
# For Docker: valkey:6379
# For local: localhost:6379
PLT_VALKEY_HOST=valkey:6379

# Logging level for Platformatic
PLT_SERVER_LOGGER_LEVEL=info

# -----------------------------------------------------------------------------
# Integration Encryption
# -----------------------------------------------------------------------------
# Encryption key for storing integration credentials securely
# Generate with: openssl rand -base64 32
INTEGRATION_ENCRYPTION_KEY=your-encryption-key-here-generate-with-openssl

# -----------------------------------------------------------------------------
# AI Gateway Configuration (Optional)
# -----------------------------------------------------------------------------
# OpenAI API key for AI-powered workflow generation
AI_GATEWAY_API_KEY=

# Or use a custom OpenAI-compatible endpoint
# OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# OAuth Providers (Optional)
# -----------------------------------------------------------------------------
# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Vercel OAuth (for Vercel integration features)
VERCEL_CLIENT_ID=
VERCEL_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Integration API Keys (Optional)
# -----------------------------------------------------------------------------
# These can also be configured per-user in the application settings

# Linear (ticket management)
LINEAR_API_KEY=
LINEAR_TEAM_ID=

# Resend (email sending)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Slack (messaging)
SLACK_API_KEY=

# -----------------------------------------------------------------------------
# Docker-specific Settings
# -----------------------------------------------------------------------------
# Skip migrations on startup (useful for debugging)
SKIP_MIGRATIONS=false

# Node environment
NODE_ENV=development


